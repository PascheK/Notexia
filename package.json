{
  "name": "notexia",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "tauri": "turbo run tauri:dev",

    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:desktop": "pnpm --filter apps/desktop dev",
    "build:desktop": "pnpm --filter apps/desktop build",
    "lint:desktop": "pnpm --filter apps/desktop lint",
    "typecheck:desktop": "pnpm --filter apps/desktop typecheck"
  },
  "devDependencies": {
    "prettier": "3.7.4",
    "turbo": "2.6.2",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22"
  }
}
